// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Assessment {
  id                String    @id @default(uuid())
  linkedinUrl       String
  email             String?
  archetype         String?
  assessmentData    Json?     // Full AI response stored as JSON
  createdAt         DateTime  @default(now())
  emailSubmittedAt  DateTime?
  shared            Boolean   @default(false)
  shareCount        Int       @default(0)

  @@index([email])
  @@index([createdAt])
}

model WaitlistEmail {
  id        String   @id @default(uuid())
  email     String   @unique
  source    String   @default("assessment") // Where they signed up
  createdAt DateTime @default(now())

  @@index([email])
}
